NameVirtualHost *:80

<VirtualHost *:80>
   ServerAdmin webmaster@localhost.com
   DocumentRoot "<%= scope.lookupvar('boxen_srcdir') %>/microsites"
   ServerName microsites.local
   ServerAlias microsites.dev
   ErrorLog "/private/var/log/apache2/microsites-error_log"
   CustomLog "/private/var/log/apache2/microsites-access_log" common
   LoadModule php5_module libexec/apache2/libphp5.so

  <Directory<%= scope.lookupvar('boxen_srcdir') %>/microsites>
    Options FollowSymLinks -MultiViews
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>

</VirtualHost>
